    </section>
    <section class="search-sec">
        <div class="container">
            <form action="@Url.Action("Index","Product")" method="post" novalidate="novalidate">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            @*<div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                <input type="text" class="form-control search-slt" placeholder="Product">
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                <input type="text" class="form-control search-slt" placeholder="Suplyer">
                            </div>*@
                            <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                <select class="form-control search-slt" id="exampleFormControlSelect1" runat="server">
                                    @{List<string> Check = new List<string>();}
                                    @foreach (ProductCategory product in Model.ProductCategories.ToList())
                                    {

                                        if (!Check.Contains(product.Name))
                                        {
                                            Check.Add(product.Name);
                                            <option class="searchCategory" productId="@product.Id">@product.Name</option>
                                        }
                                     }

                                </select>
                            </div>
                            <div class="col-lg-3 col-md-3 col-sm-12 p-0">
                                <button runat="server" type="button" class="btn btn-danger wrn-btn" >Search</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
</carousel>

<div class="dropdown-menu-right">
    Filter by

    @{List<string> Checks = new List<string>();}
    @foreach (ProductCategory product in Model.ProductCategories.ToList())
    {

        if (!Checks.Contains(product.Name))
        {
            Checks.Add(product.Name);
            <a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index" asp-route-Category="@product.Id">@product.Name</a>}
    }
</div>

<div class="container">
    @foreach (var element in Model.Products.ToList())
    {
        <div class="col-lg-3 col-lg-3" style="display: inline-block; max-width: 350px; ">
            <div class="card">
                <img src="img/@(element.Name).jpg" style="height: 120px; width: 180px; align-self: center; padding-top: 10px">

                <div class="card-body">
                    <h5 class="card-title text-center">
                        Product
                        @{ var num = Model.Products.ToList().IndexOf(element) + 1;}
                        @num
                    </h5>
                    <h5 class="card-title">@element.Name</h5>
                    <p class="card-text">@element.Description</p>
                    <p class="card-text">Category: @element.ProductCategory.Department</p>
                    <p class="card-text">Supplier: @element.Supplier.Name</p>
                    <p class="card-text text-center"><strong>Price: @element.DefaultPrice.ToString("C2")</strong></p>
                    <a href="" type="button" class="btn btn-primary" style="float: bottom">Add To Cart</a>
                </div>
            </div>
        </div>
    }


</div>

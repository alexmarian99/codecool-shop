@page
@model MVVM_Shop.Pages.LoginModel
@{
}
<h3 style="text-align: center; color: rgb(233,149,1); margin-top: 70px;"> Where your Dreams come true</h3>


<div class="row main vertical-center">

    <div class="main-login main-center ">
        <h4>Login</h4>
        <hr style="color:white;" />
        <form method=post>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="input-group">
                        <label class="label-register cols-sm-2 control-label">Email</label>
                        <div class="cols-sm-10">
                            <input asp-for="Email" class="input-register form-control" maxlength="30" style="width:240px;" type="email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="cols-sm-10">
                    <div class="input-group">
                        <label class="label-register cols-sm-2 control-label">Password</label>
                        <div class="cols-sm-10">
                            <input asp-for="Password" class="input-register form-control" maxlength="30" style="width:240px;" type="password" required />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <br />
                    <input type="submit" value="Login" class="btn btn-danger" asp-page-handler="LoginUser" />
                </div>
            </div>
        </form>
        <hr />
        <p>Or</p>
        <a class="btn btn-danger" href="@Url.Page("/Register")">Register</a>
        <br />
    </div>

</div>

